<openerp>
    <data>

        <record id="annual_crm_case_section_form_inherit" model="ir.ui.view">
            <field name="name">annual.crm.case.section.form</field>
            <field name="model">crm.case.section</field>
            <field name="inherit_id" ref="sale.crm_case_section_salesteams_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoiced_target']" position="before">
                    <field name="forecast_period"/>
                </xpath>
            </field>
        </record>

        <record id="annual_crm_case_section_salesteams_view_kanban" model="ir.ui.view">
            <field name="name">annual.crm.case.section.kanban</field>
            <field name="model">crm.case.section</field>
            <field name="inherit_id" ref="sale.crm_case_section_salesteams_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='monthly_invoiced']" position="after">
                    <field name="forecast_period"/>
                    <field name="annual_invoiced"/>
                </xpath>

                <xpath expr="//div[@class='oe_center']/field[@name='monthly_invoiced']" position="replace">
                    <t t-if="record.forecast_period.raw_value == 'monthly'">
                        <field name="monthly_invoiced" widget="gauge" style="width:160px; height: 120px; cursor: pointer;" options="{'max_field': 'invoiced_target'}">Invoiced</field>
                    </t>
                    <t t-if="record.forecast_period.raw_value == 'annual'">
                        <field name="annual_invoiced" widget="gauge" style="width:160px; height: 120px; cursor: pointer;"
                        options="{'max_field': 'invoiced_target'}">Annual Invoiced</field>
                    </t>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
