<odoo>
    <record id="igrid_mrp_production_form" model="ir.ui.view">
        <field name="name">igrid.mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <button name="button_unreserve" position="after">
                <button name="button_recalculate_cost" type="object" string="Recalculate cost"
                    attrs="{'invisible':
                        [   '|',
                            ('state', '!=', 'done'),
                            ('recalculate_cost', '=', False)
                        ]}"
                />
            </button>
            <field name="bom_id" position="after">
                <field name="cost_production"/>
            </field>
            <field name="origin" position="after">
                <field name="cost_all_production"/>
            </field>
            <field name="availability" position="after">
                <field name="recalculate_cost"/>
            </field>
        </field>
    </record>
</odoo>