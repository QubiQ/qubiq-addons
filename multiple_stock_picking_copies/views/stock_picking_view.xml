<openerp>
    <data>
        <record id="multiprint_view_picking_form" model="ir.ui.view">
            <field name="name">multiprint.view.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='do_print_picking']" position="attributes">
                    <attribute name="name">print_multiple_copies_picking</attribute>
                    <attribute name="attrs">{'invisible': [('state','not in',('assigned','done'))]}</attribute>
                </xpath>

                <xpath expr="//group[@string='General Informations']" position="after">
                    <group string="Print Options">
                        <field name="num_copies"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
