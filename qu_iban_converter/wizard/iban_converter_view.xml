<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_conversion_ccc_to_iban_confirm" model="ir.ui.view">
        <field name="name">Conversión CCC to IBAN</field>
        <field name="model">res.partner.bank.confirm</field>
        <field name="arch" type="xml">
          <form string="Mandate Creation">
              <footer>
                  <button name="calculo_iban_proceso" string="Process" type="object" class="oe_highlight"/>
                  or
                  <button string="Cancel" class="oe_link" special="cancel" />
              </footer>
        </form>
        </field>
    </record>

    <record id="action_conversion_ccc_to_iban_confirm" model="ir.actions.act_window">
        <field name="name">Conversión CCC to IBAN</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.bank.confirm</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_conversion_ccc_to_iban_confirm"/>
        <field name="target">new</field>
    </record>

    <menuitem id="conversion_ccc_to_iban_confirm_menu" name="Conversión CCC to IBAN"
              parent="sales_team.menu_config_bank_accounts" action="action_conversion_ccc_to_iban_confirm"/>

</odoo>