<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="project_project_code_form_view">
            <field name="name">Form Project  Code</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project" />
            <field name="arch" type="xml">
                <field name="user_id" position="before">
                    <field name="project_code"/>
                    <newline/>
                    
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="project_project_code_tree_view">
            <field name="name">Tree Project  Code</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="project_code" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="project__code_kanban_view">
            <field name="name">Kanban Project Issue Code</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="project_code" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="project_issue_code_search_view">
            <field name="name">Search Project Code</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_project_filter" />
            <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="filter_domain">['|', ('name', 'ilike', self), ('project_code', 'ilike', self)]</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>
