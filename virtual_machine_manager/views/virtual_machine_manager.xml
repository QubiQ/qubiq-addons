<openerp>
	<data>
		<record model="ir.ui.view" id="virtual_machine_instances_form">
			<field name="name">virtual.machine.instance.form</field>
			<field name="model">virtual.machine.partners</field>
			<field name="arch" type="xml">
				<form string="Virtual Machine Instances">
					<sheet>
						<group>
							<field name="vm_id"/>
							<field name="partner_id"/>
							<field name="start_date"/>
							<field name="state"/>
						</group>
						<group>
							<field name="ip_address"/>
							<field name="dns_name" widget="url"/>
							<field name="port"/>
						</group>
						<notebook>
							<page string="InformaciÃ³ adicional">
								<field name="info"/>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="virtual_machine_search">
			<field name="name">virtual.machine.instance.search</field>
			<field name="model">virtual.machine.partners</field>
			<field name="arch" type="xml">
				<search>
					<field name="vm_id"/>
					<field name="partner_id"/>
					<group string="Group By">
						<filter name="vm_id" string="VM Name" context="{'group_by': 'vm_id'}"/>
						<filter name="state" string="VM State" context="{'group_by': 'state'}"/>
					</group>
				</search>
			</field>
		</record>

		<record model="ir.ui.view" id="virtual_machine_instances_tree">
			<field name="name">virtual.machine.instance.tree</field>
			<field name="model">virtual.machine.partners</field>
			<field name="arch" type="xml">
				<tree string="Virtual Machine Instances">
					<field name="vm_id"/>
					<field name="partner_id"/>
					<field name="start_date"/>
					<field name="state"/>
					<field name="ip_address"/>
					<field name="dns_name" widget="url"/>
					<field name="port"/>
				</tree>
			</field>
		</record>


		<record model="ir.actions.act_window" id="virtual_machine_instances_action">
			<field name="name">Virtual Machines Instances</field>
			<field name="res_model">virtual.machine.partners</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="main_virtual_machines_menu" name="VMS" sequence="250"/>
		<menuitem id="virtual_machines_instances_menu" name="Instances" parent="main_virtual_machines_menu"/>
		<menuitem id="instances_menu" name="Instances" parent="virtual_machines_instances_menu" action="virtual_machine_instances_action"/>

		<record model="ir.ui.view" id="virtual_machine_info_form">
			<field name="name">virtual.machine.info.form</field>
			<field name="model">virtual.machine.info</field>
			<field name="arch" type="xml">
				<form string="Virtual Machine Information">
					<sheet>
						<group>
							<field name="name"/>
							<field name="ram"/>
							<field name="cores"/>
							<field name="amazon_instance_type"/>
							<field name="version"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="virtual_machine_info_tree">
			<field name="name">virtual.machine.info.tree</field>
			<field name="model">virtual.machine.info</field>
			<field name="arch" type="xml">
				<tree string="Virtual Machine Information">
					<field name="name"/>
					<field name="ram"/>
					<field name="cores"/>
					<field name="amazon_instance_type"/>
					<field name="version"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="virtual_machine_info_action">
			<field name="name">Virtual Machines Information</field>
			<field name="res_model">virtual.machine.info</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="virtual_machines_config_menu" name="Configuration" parent="main_virtual_machines_menu"/>
		<menuitem id="info_menu" name="Information" parent="virtual_machines_config_menu" action="virtual_machine_info_action"/>

	</data>
</openerp>